<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezword.eventmap.EventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/event_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/event_time_place_card">
                <include layout="@layout/event_details"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/event_time_place_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/event_detail_card"
                app:layout_constraintBottom_toTopOf="@id/hosts_label">
                <include layout="@layout/event_time_place"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/hosts_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hosts"
                android:layout_margin="8dp"
                android:padding="8dp"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                app:layout_constraintTop_toBottomOf="@id/event_time_place_card"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/host_contact_card"/>

            <android.support.v7.widget.CardView
                android:id="@+id/host_contact_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/hosts_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <include layout="@layout/host_contact"/>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_margin="16dp" />
</android.support.design.widget.CoordinatorLayout>
